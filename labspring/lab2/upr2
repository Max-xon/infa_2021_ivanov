import matplotlib.pyplot as plt
plt.figure(figsize=(15, 5))
data = open("chromo.txt", "r").readlines()
x = []
y = []
lenn = len(data)
for i1 in range(1, lenn, 1):
    buf = data[i1].split()
    x.append(float(buf[0]))
    y.append(float(buf[1]))
plt.plot(x, y)
plt.title('Флуоресценция')
plt.xlabel('time')
plt.ylabel('signal')
plt.show()
