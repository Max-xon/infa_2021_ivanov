import numpy as np
import matplotlib.pyplot as plt
x = np.arange(-10, 10, 0.01)
plt.plot(x, x*x - x - 6)
sp = plt.subplot(111)
plt.axis('equal')
sp.spines['left'].set_position('center')
sp.spines['bottom'].set_position('center')
sp.spines['top'].set_position('center')
sp.spines['right'].set_position('center')
plt.show()
